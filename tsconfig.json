{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "jsx": "react",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "allowJs": true,
      "outDir": "./target/classes/static",
      "baseUrl": "./",
      "paths": {
        "*": [
          "node_modules/*",
          "src/main/js/*"
        ]
      },
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": [
      "src/main/js/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}  